<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"> <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <FrameLayout
        android:id="@+id/flIconContainer"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/circular_background_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_coin_24"
            tools:src="@drawable/ic_coin_24" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvTenGiaoDich"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="Ăn trưa &amp; Nước uống"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintStart_toEndOf="@id/flIconContainer"
        app:layout_constraintEnd_toStartOf="@id/tvSoTien"
        app:layout_constraintTop_toTopOf="@id/flIconContainer"
        app:layout_constraintBottom_toTopOf="@id/tvNgayGiaoDich"
        app:layout_constraintVertical_chainStyle="packed" /> <TextView
    android:id="@+id/tvNgayGiaoDich"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="2dp"
    android:text="14/08/2025"
    android:textSize="14sp"
    android:textColor="?android:attr/textColorSecondary"
    app:layout_constraintStart_toEndOf="@id/flIconContainer"
    app:layout_constraintEnd_toStartOf="@id/tvSoTien"
    app:layout_constraintTop_toBottomOf="@id/tvTenGiaoDich"
    app:layout_constraintBottom_toBottomOf="@id/flIconContainer" />

    <TextView
        android:id="@+id/tvSoTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-60,000 ₫"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/expense_color" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:textColor="@color/red_expense" />

</androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>